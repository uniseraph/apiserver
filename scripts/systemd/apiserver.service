[Unit]
Description=Zanecloud Container Platform
Documentation=http://www.zanecloud.com
After=network.target

[Service]
Type=notify
NotifyAccess=all
EnvironmentFile=-/opt/zanecloud/apiserver/etc/apiserver
ExecStart=/opt/zanecloud/apiserver/bin/apiserver -l debug
ExecReload=/bin/kill -s HUP $MAINPID
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=infinity
TimeoutStartSec=0
Restart=on-abnormal
MountFlags=slave

[Install]
WantedBy=multi-user.target