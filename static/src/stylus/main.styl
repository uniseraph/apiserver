@import '../../node_modules/vuetify/src/stylus/main'

.navigation-drawer
	width: 240px

.navigation-drawer--mini-variant
	width: 80px

.ico_back
	color: #1976d2
	cursor: pointer

.card
	&__title
		font-size: 16px

.subheader
	height: 36px

.input-group
	margin: 0 0

	&__details
		min-height: 6px

.btn
	&--floating
		&.btn--small
			width: 30px
			height: 30px

.input-group--select 
	.input-group
		&__selections
			&__comma
				font-size: 14px

.input-group--text-field 
	input
		font-size: 14px

.input-group--span
	padding-top: 6px

.required-star
	color: red
	padding-left: 5px